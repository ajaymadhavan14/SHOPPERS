          <div class="card-body">
            <form action="/admin/addproduct" method="post" enctype="multipart/form-data">
              <div class="mb-3 row">
                <label for="html5-text-input" class="col-md-2 col-form-label">Title</label>
                <div class="col-md-10">
                  <input class="form-control" type="text"  id="html5-text-input" name="title" />
                </div>
              </div>

              <div class=" mb-3">
                
                <label for="largeSelect" class="form-label">Category</label>
                <select id="largeSelect" class="form-select form-select-lg" name="category">
                  <option>choose</option>
                  <% for(var i=0; i < data.length; i++) { %>
                  <option value="<%= data[i]._id %>"><%= data[i].name %></option>
                  <% } %>
                </select>
                
              </div>

             
              <!-- <div class="mb-3">

              <div class="mb-3 row">
                <label for="html5-number-input" class="col-md-2 col-form-label">Price</label>
                <div class="col-md-10">
                  <input class="form-control" type="number"  id="html5-number-input" name="price" />
                </div>
              </div>

              <div class="mb-3 row">
                <label for="html5-text-input" class="col-md-2 col-form-label">size</label>
                <div class="col-md-10">
                  <input class="form-control" type="text"  id="html5-text-input" name="size"/>
                </div>
              </div>

              <div class="mb-3 row">
                <label for="html5-number-input" class="col-md-2 col-form-label">Quantity</label>
                <div class="col-md-10">
                  <input class="form-control" type="number"  id="html5-number-input" name="quantity"/>
                </div>
              </div>
             
             
              <div class="mb-3">
                <label for="formFileMultiple" class="form-label">Images</label>
                <input class="form-control" type="file" id="myFile" name="myFile" multiple />
              </div>

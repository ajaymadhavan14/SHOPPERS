
<%- include('partials/adminheader.ejs') %>

<div>

<div class="container pt-5">
    <div>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">No</th>
                <th scope="col">Main Header</th>
                <th scope="col">Images</th>
                <th scope="col">Action</th>
               
              </tr>
            </thead>
            <tbody>
                <% for(var i=0; i < data.length; i++) { %>
                    <tr>
                      <th scope="row">1 </th>
                      <td><%= data[i].title %> </td>
                      <td>
                       
                          
                          <img src="/images/<%= data[i].images[0]%>" alt="" style="height: 200px;width: 200px;">
                          <img src="/images/<%= data[i].images[1]%>" alt="" style="height: 200px;width: 200px;">
                          
                      </td>
                      <td> <button type="submit" class="btn btn-danger" onclick="alertMsg('<%=data[i]._id %>')" >Delete</button> </td>
                     
                      
                    </tr>
                    <% } %>
            </tbody>
          </table>
    </div>
   
</div>


</div>
<div class="Container p-5">
    <h3>Add Banner</h3>
    <form action="/admin/banner" method="post" enctype="multipart/form-data" >
       

        <div class="mb-3 ">
            <label for="html5-text-input" class="col-md-2 col-form-label">Main Heading</label>
            <div >
              <input class="form-control" type="text"  id="html5-text-input" name="title" />
            </div>
          </div>
           
          <div class="mb-3">
            <label for="formFileMultiple" class="form-label">Banner Images</label>
            <input class="form-control" type="file" id="myFile" name="myFile" multiple />
          </div>


        <!-- <div class="form-floating">
            <textarea class="form-control" placeholder="Leave a comment here" id="discription" name="discription"></textarea>
            <label for="floatingTextarea">Discription</label>
        </div> -->
        <div>
            <button type="submit" class="btn btn-success">Add</button>
        </div>
    
    </form>
</div>


<script>
    function alertMsg(id){
        swal({
  title: "Are you sure?",
  text: "Once deleted, you will not be able to recover this  file!",
  icon: "warning",
  buttons: true,
  dangerMode: true,
  })
  .then((willDelete) => {
  if (willDelete) {
    swal(" Your  file has been deleted!", {
      icon: "success",
    });
    location.href="/admin/remove-banner/"+id
  } else {
    swal("Your file is safe!");
  }
  });
    }
  </script>
  




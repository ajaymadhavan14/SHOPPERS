
<%- include('partials/adminheader.ejs') %>


<!-- Content wrapper -->
 <div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
      <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Edit Products</h4>

       <div >
         
        
        <div class="col-xl-12">
          <!-- HTML5 Inputs -->
          <div class="card mb-4">
            <h5 class="card-header">Products Details</h5>
          <div class="card-body">
            <form action="/admin/editproduct/<%= data._id %>" method="post" enctype="multipart/form-data">
              <div class="mb-3 row">
                <label for="html5-text-input" class="col-md-2 col-form-label">Title</label>
                <div class="col-md-10">
                  <input class="form-control" type="text"  id="html5-text-input" name="title" value="<%= data.title %>" required/>
                </div>
              </div>


              <div class="mb-3 row">
                <label for="html5-number-input" class="col-md-2 col-form-label">Category</label>
                <div class="col-md-10">
                  <input class="form-control" type="text" value="<%= data.category %>" id="html5-number-input" name="category" required  />
                </div>
              </div>


              <div class="mb-3 row">
                <label for="html5-number-input" class="col-md-2 col-form-label">Active</label>
                <div class="col-md-10">
                  <input class="form-control" type="text" value="<%= data.active %>" id="html5-number-input" name="active" required/>
                </div>
              </div>

              <!-- <div class=" mb-3">
                <label for="largeSelect" class="form-label">Category</label>
                <select id="largeSelect" class="form-select form-select-lg" name="category" >
                  <% for(var i=0; i < data.length; i++) { %>
                    <option value="category"></option>
                
                 <% } %>
                </select>
              </div> -->

             
              <!-- <div class="mb-3">
                <label for="defaultSelect" class="form-label" >Sub Category</label>
                <select id="defaultSelect" class="form-select"  name="subcategory"   >
                    <option value="subcategory" ><%= data.subcategory %></option>
                  
                </select>
              </div> -->
              
              
              <div class="mb-3 row">
                <label for="html5-number-input" class="col-md-2 col-form-label">Price</label>
                <div class="col-md-10">
                  <input class="form-control" type="number" value="<%= data.price %>" id="html5-number-input" name="price" required />
                </div>
              </div>

              <div class="mb-3 row">
                <label for="html5-text-input" class="col-md-2 col-form-label">size</label>
                <div class="col-md-10">
                  <input class="form-control" type="text"  id="html5-text-input" name="size" value="<%= data.size %>" required/>
                </div>
              </div>

              <div class="mb-3 row">
                <label for="html5-number-input" class="col-md-2 col-form-label">Quantity</label>
                <div class="col-md-10">
                  <input class="form-control" type="number" value="<%= data.quantity %>" id="html5-number-input" name="quantity" required/>
                </div>
              </div>
             
             
              <div class="mb-3">
                <label for="formFileMultiple" class="form-label">Images</label>
                <% for(var i=0; i < data.images.length; i++) { %>
                <img src="/images/<%= data.images[i]%>" alt="" style="height: 200px;width: 200px;">
                <% } %>
                <input class="form-control" type="file" id="myFile" name="myFile" multiple required/>
              </div>

              <div class="mb-3 row">
                <label for="html5-color-input" class="col-md-2 col-form-label">Color</label>
                <div class="col-md-10">
                  <input class="form-control" type="color" value="#666EE8" id="html5-color-input" name="color" required/>
                </div>
              </div>

              <div>
                <label for="exampleFormControlTextarea1" class="form-label">Discription</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="4" name="description" itemid="description" required  ><%= data.description %></textarea>

              </div>

              <div class=" mt-2">

                <button type="submit" class="btn btn-primary">submit</button>

              </div>
              
            </form>
              
           </div>
         </div>

         
        </div>
      </div>
    </div>
    <!-- / Content -->

    <div class="content-backdrop fade"></div>
  </div>
  <!-- Content wrapper -->
</div>
<!-- / Layout page -->
</div>

<!-- Overlay -->
<div class="layout-overlay layout-menu-toggle"></div>
</div>

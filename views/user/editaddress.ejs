<%- include('partials/userheader.ejs') %>


<section class="container">
    
    <form class="row g-3" method="post" action="/editaddress/<%= data._id %> "   >
        <div class="col-md-6">
          <label for="inputEmail4" class="form-label font-weight-bold">Name</label>
          <input type="text" class="form-control" id="inputEmail4"  value="<%= data.name %> " name="name" required>
        </div>
        <div class="col-md-6">
          <label for="inputPassword4" class="form-label font-weight-bold">Moblie Number</label>
          <input type="number" class="form-control" id="inputPassword4" name="phoneNumber" value="<%= data.phoneNumber %>" required>
        </div>

        <div class="col-md-6">
            <label for="inputEmail4" class="form-label font-weight-bold">Pincode</label>
            <input type="number" class="form-control" id="inputEmail4" name="pincode" value="<%= data.pincode %>" required>
        </div>
        <div class="col-md-6">
            <label for="inputPassword4" class="form-label font-weight-bold">Locality</label>
            <input type="text" class="form-control" id="inputPassword4" name="locality" value="<%= data.locality %>" required>
        </div>

        <!-- <div class="col-12">
          <label for="inputAddress" class="form-label">Address</label>
          <input type="text" class="form-control" id="inputAddress" placeholder="Area and street">
        </div> -->

        <div class="col-12 mb-3">
            <label for="exampleFormControlTextarea1" class="form-label font-weight-bold">Address</label>
            <textarea class="form-control" id="adress" rows="3" placeholder="Area and street" name="adress" required ><%= data.adress %></textarea>
          </div>
        <!-- <div class="col-12">
          <label for="inputAddress2" class="form-label">Address 2</label>
          <input type="text" class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor">
        </div> -->
        <div class="col-md-6">
          <label for="inputCity" class="form-label font-weight-bold">City</label>
          <input type="text" class="form-control" id="inputCity" name="city" value="<%= data.city %>" required>
        </div>
        <div class="col-md-6">
            <label for="inputPassword4" class="form-label font-weight-bold">Landmark</label>
            <input type="text" class="form-control" id="inputPassword4" placeholder="optional" name="landmark" value="<%= data.landmark %>">
        </div>
        <div class="col-md-6">
            <label for="inputPassword4" class="form-label font-weight-bold">AlternatePhone</label>
            <input type="text" class="form-control" id="inputPassword4" placeholder="optional" name="AlternatePhone" value="<%= data.AlternatePhone %>">
        </div>
        <div class="col-md-6 pt-5">
          <label for="inputState" class="form-label font-weight-bold">STATE</label>
          <select id="inputState" class="form-select" style="width:20rem;" name="state" required >
            <option selected ><%= data.state %></option>
            <option>kerala</option>
            <option value="">Tamil Nadu</option>
            <option value="">Karnataka</option>
            <option value="">Goa</option>
            <option value="">Telangana</option>
          </select>
        </div>
        
        <!-- <div class="col-md-2">
          <label for="inputZip" class="form-label">Zip</label>
          <input type="text" class="form-control" id="inputZip">
        </div> -->

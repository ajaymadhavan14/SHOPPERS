            <label class="form-check-label" for="gridCheck">
              Check me out
            </label>
          </div>
        </div> -->

        <% if(error.length>0){ %>
          <div class="alert alert-danger" role="alert">
           <!-- Incorrect username or password ! -->
           <%= error %></div>
      <% } %>
      
        <div class="col-12 pt-3">
          <button type="submit" class="btn btn-primary">SAVE</button>
        </div>
      </form>

      

</section>


<script>

  $('#forgot-form').submit((e)=>{
    console.log("hii")
    e.preventDefault();
    $.ajax({
     
     url:'/fogot-password',
     method:'post',
     data:$("#forgot-form").serialize(),
     success:(response)=>{
      
       if(response.status){
  
         
         document.getElementById('verfyButton').style.display = "none";
         document.getElementById('enterOTP').style.display = "block";
         document.getElementById('sendButton').style.display = "block";
         document.getElementById('mobileNumber').setAttribute("disabled", "")

       }else {
         document.getElementById('noNumber').style.display = "block";

       }
     }
    })
  })
